<div class="page-header">
  <h3> <%= @activity.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @activity.name %></dd>

      <dt>Address</dt>
      <dd><%= @activity.address %></dd>

      <dt>Trip</dt>
      <dd><%= @activity.trip_id %></dd>

      <dt>When happened</dt>
      <dd><%= @activity.when_happened %></dd>

      <dt>Review</dt>
      <dd><%= @activity.review %></dd>

      <dt>Activity rating</dt>
      <dd><%= @activity.activity_rating %></dd>

      <dt>Recommend</dt>
      <dd><%= @activity.recommend %></dd>

      <dt>Photos</dt>
      <dd><%= @activity.photos %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/activities" class="btn btn-primary">
        Back
      </a>
      <a href="/activities/<%= @activity.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_activity/<%= @activity.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
