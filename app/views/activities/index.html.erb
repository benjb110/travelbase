<div class="page-header">
  <h1>
    Activities
    <a href="/activities/new" class="btn btn-lg btn-success">New Activity</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Visit</th>
        <th>When happened</th>
        <th>Review</th>
        <th>Activity rating</th>
        <th>Recommend</th>
        <th>Photos</th>
        <th>Actions</th>
      </tr>

      <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.address %></td>
        <td><%= activity.visit_id %></td>
        <td><%= activity.when_happened %></td>
        <td><%= activity.review %></td>
        <td><%= activity.activity_rating %></td>
        <td><%= activity.recommend %></td>
        <td><%= activity.photos %></td>
        <td>
          <a href="/activities/<%= activity.id %>" class="btn btn-primary">Show</a>
          <a href="/activities/<%= activity.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_activity/<%= activity.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
