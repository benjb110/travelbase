<div class="page-header">
  <h1>
    Countries
    <a href="/countries/new" class="btn btn-lg btn-success">New Country</a>
  </h1>
</div>


<div class="row">
  <div class="col-md-4 col-md-offset-2">



    <div class="panel panel-default">
      <div class="panel-heading">
        <%= search_form_for @q do |f| %>


        <div class="form-group">
        <p>  <%= f.label :name_cont, "Country containing" %> </p>
          <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Enter a few characters" %>
        </div>

        <%= f.submit :class => "btn btn-primary" %>

        <a href="/users" class="btn btn-default">Clear filters</a>
        <% end %>
      </div>
      <table class="table table-striped table-hover">

        <% @countries.each do |country| %>
        <tr>
          <td>
            <a href="/countries/<%= country.id %>"><%= country.name %></a>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
