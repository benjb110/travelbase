<div class="page-header">
  <h3><%= @country.name %></h3>
</div>

<% @country.trips.each do |trip| %>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Trip</th>
      <th>User</th>
      <th>Trip Length</th>
      <th>Rating</th>
    </tr>

  </thead>
  <tbody>
    <tr>
      <td>   <a href="/trips/<%= trip.id %>"> <%= trip.trip_name %>
      </td>
      <td> <a href="/users/<%= trip.user.id %>"> <%= trip.user.username %>
      </td>
      <td> <%= distance_of_time_in_words(trip.start_date,trip.end_date)%>
      </td>
      <td>  <% if trip.rating==1 %>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% elsif trip.rating==2 %>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% elsif trip.rating==3 %>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% elsif trip.rating==4 %>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% else %>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<%end  %>
