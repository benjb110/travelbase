<div class="jumbotron">
  <h1> <%= @user.username %></h1>
  <p> <%= @year -@user.birthdate.year %> years old </p>
  <p> Born in <%= @user.country_born.name %></p>
  <p> Currently living in <%= @user.country_residing.name %></p>

  <% if @user.id== current_user.id  %>
  <p> <a href="/trips/new" class="btn btn-primary btn-lg">Create New Trip</a></p>
  <% else %>
  <% end %>
</div>







<table class="table table-striped table-hover ">
  <thead>
    <tr>

      <th>Trip</th>
      <th>Country</th>
      <th>Dates</th>
      <th>Length</th>
      <th>Comments</th>
    </tr>
  </thead>


  <tbody>
    <h2>Trip Summaries</h2>




        <%@user.trips.each do |trip| %>
        <tr class="success">
          <!-- <tr class="danger">
             <tr class="warning"> -->
      <td> <a href="/trips/<%= trip.id %>"> <%=trip.trip_name %> </a> </td>
      <td> <%=trip.country.name %> </td>
      <td>Column content</td>
      <td> <%= distance_of_time_in_words(trip.start_date,trip.end_date)%> </td>
      <td><%=trip.comments %></td>
    </tr>
      <% end %>
  </tbody>
</table>
