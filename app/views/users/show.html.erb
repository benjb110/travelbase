<div class="jumbotron">
  <img src="<%= @user.picture %>" class="img-responsive">
  <h1> <%= @user.username %></h1>
  <p> <%= @year -@user.birthdate.year %> years old </p>
  <p> Born in <%= @user.country_born.name %></p>
  <p> Currently living in <%= @user.country_residing.name %></p>

  <% if @user.id== current_user.id  %>
  <p> <a href="/trips/new" class="btn btn-primary btn-md">Create New Trip</a></p>
  <% else %>
  <% end %>
</div>







<table class="table table-striped table-hover ">
  <thead>
    <tr>

      <th>Trip</th>
      <th>Country</th>
      <th>Dates</th>
      <th>Length</th>
      <th>Trip Rating</th>
      <th>Comments</th>
      <% if @user.id== current_user.id  %>
      <th> edit </th>
      <% else %>
      <% end %>
    </tr>
  </thead>


  <tbody>
    <h2>Trip Summaries</h2>




    <%@user.trips.each do |trip| %>
    <tr class="success">
      <!-- <tr class="danger">
      <tr class="warning"> -->
      <td> <a href="/trips/<%= trip.id %>"> <%=trip.trip_name %> </a> </td>
      <td> <%=trip.country.name %> </td>
      <td>Column content</td>
      <td> <%= distance_of_time_in_words(trip.start_date,trip.end_date)%> </td>
      <td>   <% if trip.rating==1 %>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% elsif trip.rating==2 %>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% elsif trip.rating==3 %>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% elsif trip.rating==4 %>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% else %>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% end %>
      </td>
      <td><%=trip.comments %></td>
      <% if @user.id== current_user.id  %>
      <td> <a href="/trips/<%= trip.id %>/edit"> edit this trip </a> </td>
      <% else %>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
